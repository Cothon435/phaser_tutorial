{
  // TypeScript 컴파일러 설정
  "compilerOptions": {
    // 소스 코드가 위치한 폴더 (컴파일러가 입력 파일을 찾는 기준)
    "rootDir": "./src",

    // 컴파일된 JS 파일이 생성될 폴더
    "outDir": "./dist",

    // 모듈 시스템 타입 (ES6 모듈 형식 사용)
    "module": "ESNext",
    "moduleResolution": "Node",

    // 타깃 자바스크립트 버전 (ES6 = ECMAScript 2015)
    "target": "ES6",

    // 엄격한 타입 검사 활성화 (권장)
    "strict": true,

    // CommonJS 모듈과 ES 모듈 호환성을 위한 설정 (default import 허용)
    "esModuleInterop": true,

    // 라이브러리(.d.ts) 파일 체크를 건너뜀 (컴파일 속도 향상)
    "skipLibCheck": true,

    // 디버깅용 소스맵 파일 생성
    "sourceMap": true,

    // 타입 선언 파일(.d.ts) 생성
    "declaration": true,

    // 타입 선언용 소스맵 파일 생성
    "declarationMap": true,

    // 배열 접근 시 인덱스 범위 검사 강화
    "noUncheckedIndexedAccess": true,

    // 선택적 속성 타입 검사 강화
    "exactOptionalPropertyTypes": true,

    // 각 파일을 독립된 모듈로 처리
    "isolatedModules": true,

    "lib": [
      "es2019", // 또는 "es2020", "es2021" 등 최신 버전도 가능
      "dom" // 웹 API가 필요하다면 포함
    ]
  },

  // 컴파일할 파일 범위 지정
  "include": ["src/**/*"],

  // 제외할 파일/폴더 (필요시 추가 가능)
  "exclude": ["node_modules", "dist"]
}
